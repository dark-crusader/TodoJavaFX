<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="darkCrusader.toDoList.DialogController">
    <headerText>
        Instructions
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Short Description: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="shortDescription" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Details: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="details" GridPane.columnIndex="1" GridPane.rowIndex="1"
                      wrapText="true"/>
            <Label text="Deadline: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <DatePicker fx:id="deadlinePicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>
    </content>
</DialogPane>
